%h1 Add New Category

.container.well
  = button_to category_index_path, :method => :get, class: 'btn btn-info' do
    %span.glyphicon.glyphicon-arrow-left
    Back
  %br
  - if flash[:notice] == 'Please fill in the category name field.' or flash[:notice] == 'The category name provided already exists. Please enter a different name.' or flash[:notice]=="Please enter a valid URL."
    #flashNotice
      = flash[:notice]

  = form_tag create_category_path do
    .form-group
      = label :category, :name, 'Category Name'
      = text_field :category, 'name', class: 'form-control'

    = submit_tag 'Submit', class: 'btn btn-success'